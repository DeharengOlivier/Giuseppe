// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Article {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Prestation {
  id          String   @id @default(cuid())
  title       String
  description String
  price       String?
  benefits    String   // Stocké en JSON
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(cuid())
  position    String
  company     String
  location    String?
  startDate   DateTime
  endDate     DateTime?
  current     Boolean  @default(false)
  description String
  skills      String   // Stocké en JSON
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageContent {
  id          String   @id @default(cuid())
  key         String   @unique // ex: 'home_hero_title', 'home_hero_subtitle', etc.
  value       String
  type        String   @default("text") // text, textarea, image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Theme {
  id           String   @id @default(cuid())
  name         String   @unique
  displayName  String
  isActive     Boolean  @default(false)
  isPredefined Boolean  @default(false)
  config       String   // JSON avec tous les design tokens
  previewUrl   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Page {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  type        String   // 'prestations', 'experiences', 'about', 'activities', 'courses', 'custom'
  content     String   // JSON avec le contenu de la page
  published   Boolean  @default(false)
  showInNav   Boolean  @default(true)
  showInFooter Boolean @default(false)
  order       Int      @default(0)
  icon        String?  // Icone lucide
  centered    Boolean  @default(true)  // Contenu centré (pages prédéfinies) ou pleine largeur (custom)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Course {
  id          String   @id @default(cuid())
  title       String
  institution String
  type        String   // 'university' ou 'professional'
  level       String?  // "Master 2", "Avancé", etc.
  period      String?  // "2023-2024", "2024", etc.
  duration    String?  // "40h", "20h", etc.
  description String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
